<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="biblio.tp2">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:file:./bibliotp2;AUTO_SERVER=true"/>
            <property name="javax.persistence.jdbc.user" value="sa"/>
            <property name="javax.persistence.jdbc.password" value=""/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>

<!--            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver "/>-->
<!--            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost/temp"/>-->
<!--            <property name="javax.persistence.jdbc.user" value="lacouf"/>-->
<!--            <property name="javax.persistence.jdbc.password" value="${env.PSQL_PASSWORD}"/>-->

<!--            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL91Dialect"/>-->

            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>

        </properties>
    </persistence-unit>

</persistence>